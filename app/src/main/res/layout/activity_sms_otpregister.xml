<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="100dp"
    tools:context=".LoginRegister.SmsOTPRegister">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verifikasi Akun"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"/>

        <TextView
            android:text="Masukan kode 6 digit yang kami kirim via sms"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tvnomortelpon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorOrange"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:visibility="gone"
            android:background="@drawable/borderhitam"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints">



            <EditText
                android:id="@+id/txtfullname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fui_transparent"
                android:hint="Fullname"
                android:inputType="text"
                android:layout_gravity="center"
                android:textColorHint="#fff"
                android:textStyle="bold"
                android:textSize="10dp" />

        </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorOrange"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:background="@drawable/borderhitam"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">



        <EditText
            android:id="@+id/txtkodeotp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/fui_transparent"
            android:hint="Masukan Kode OTP"
            android:inputType="number"
            android:layout_gravity="center"
            android:textColorHint="#fff"
            android:maxLength="6"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="16dp" />

    </LinearLayout>

        <!--Button-->
        <Button
            android:id="@+id/btnverifikasi"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            android:text="Verifikasi"
            android:textStyle="bold"
            android:textColor="#fff"
            android:fontFamily="@font/jipatharegular"
            android:textSize="25dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginVertical="70dp"
            android:background="@drawable/btnorange"
            ></Button>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>