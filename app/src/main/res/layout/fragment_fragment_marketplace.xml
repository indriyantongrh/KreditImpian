<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Marketplace.FragmentMarketplace">



    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />



    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/logo"
                android:paddingTop="15dp"
                android:layout_width="320dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:paddingLeft="40dp"
                android:src="@drawable/logoputihkredit"/>


        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linera2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff"
                android:padding="0dp">

                <!--Kategori-->
                <TextView
                    android:id="@+id/text_masakan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rv_beranda"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Pilih Kategori"
                    android:textColor="@color/colorOrange"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/jipatharegular"
                    android:layout_marginStart="10dp" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <!--Baris pertama-->
                <RelativeLayout
                    android:id="@+id/baris1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">


                    <!--Baris ke dua-->
                    <RelativeLayout
                        android:id="@+id/baris2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_marginHorizontal="0dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginBottom="10dp">


                    <!--Card Fashion-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_handphone"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView42"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/handphone" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Handphone"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_handphone"
                        android:layout_alignEnd="@+id/btn_handphone"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />


                    <!--Card laptop-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_laptop"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_handphone"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView52"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/laptop" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Komputer"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_laptop"
                        android:layout_alignEnd="@+id/btn_laptop"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />


                    <!--Card laptop-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_otomotif"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_laptop"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgotomotif"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/otomotif" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Otomotif"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_otomotif"
                        android:layout_alignEnd="@+id/btn_otomotif"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />




                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_forniture"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_otomotif"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView62"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/forniture" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Forniture"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_forniture"
                        android:layout_alignEnd="@+id/btn_forniture"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />



                    <!--Card Fashion-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_fashion"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_forniture"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/fashion" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Fashion"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_fashion"
                        android:layout_alignEnd="@+id/btn_fashion"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />


                    <!--Card Olahraga-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_olahraga"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_fashion"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/olahraga" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Hobi"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_olahraga"
                        android:layout_alignEnd="@+id/btn_olahraga"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_property"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@id/btn_olahraga"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView36"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/property" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Property"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_property"
                        android:layout_alignEnd="@+id/btn_property"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_elektronik"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="30dp"
                        android:clickable="true"
                        android:layout_toRightOf="@id/btn_property"
                        android:focusable="true"
                        app:cardCornerRadius="15dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:src="@drawable/televisions" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="Elektronik"
                        android:textStyle="bold"
                        android:textColor="@color/colorOrange"
                        android:layout_alignStart="@id/btn_elektronik"
                        android:layout_alignEnd="@+id/btn_elektronik"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="14sp" />




                </RelativeLayout>
                </RelativeLayout>
                </HorizontalScrollView>











            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>