        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="5dp"
            android:background="@drawable/borderorange"
            android:backgroundTint="#fff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            tools:ignore="MissingConstraints">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borderorange"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/textMethodePembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Methode Pembayaran"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorOrange"
                    android:textSize="14dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textStyle="bold"
                    android:layout_below="@+id/linearstatus"
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@+id/LinearImage"
                    tools:ignore="NotSibling" />

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="wrap_content"
                    android:paddingTop="6dp"
                    android:layout_below="@+id/textMethodePembayaran"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/radiomethodpayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:text="TRANSFER" />


                </RadioGroup>


            </RelativeLayout>
