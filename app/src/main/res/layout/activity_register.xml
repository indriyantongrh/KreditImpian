<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginRegister.Register">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:paddingTop="40dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/lilgroteskbold"
                android:textSize="26dp"
                android:textColor="@color/colorOrange"
                android:text="Buat akun"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/lilgroteskbold"
                android:textSize="26dp"
                android:textColor="@color/colorOrange"
                android:text="Kredit Impian!"/>

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/image12"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingHorizontal="10dp"
                android:padding="30dp"
                android:src="@drawable/logobirukredit" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/TextLabel"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilgroteskregular"
                    android:hint="Username anda"
                    android:inputType="text"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/TextLabel"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilgroteskregular"
                    android:hint="Email anda"
                    android:inputType="textEmailAddress"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/TextLabel"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorOrange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilgroteskregular"
                    android:hint="Password anda"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dimen0dp"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/TextLabel"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/colorOrange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilgroteskregular"
                    android:hint="Ulang password anda"
                    android:inputType="textPassword"
                    android:paddingTop="@dimen/dimen0dp"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:theme="@style/TextLabel"
                app:hintEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNomorHandphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lilgroteskregular"
                    android:hint="Nomor handphone anda"
                    android:inputType="number"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--Login Panel-->
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                >

                <!--Icon Layout-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_left_corner_bg"

                    >

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/username">
                        </ImageView>
                    </LinearLayout>
                    <!-- Border-->
                    <LinearLayout
                        android:background="@drawable/warnaputih"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/email">
                        </ImageView>
                    </LinearLayout>

                    <!-- Border-->
                    <LinearLayout
                        android:background="@drawable/warnaputih"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal|center_vertical"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="40dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/password">
                    </ImageView>
                </LinearLayout>
                    <!-- Border-->
                    <LinearLayout
                        android:background="@drawable/warnaputih"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/password">
                        </ImageView>
                    </LinearLayout>
                    <!-- Border-->
                    <LinearLayout
                        android:background="@drawable/warnaputih"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="center_horizontal|center_vertical"
                        >

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="40dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/nomortelepon">
                        </ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/whiterightcornerbg"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/txtusername"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:hint="Username Anda"
                            />

                    </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#FF6802"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/txtemail"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp"
                            android:background="@android:color/transparent"
                            android:inputType="textEmailAddress"
                            android:hint="Email Anda"
                            />

                    </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#FF6802"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/txtpassword"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:hint="Password Anda"
                            />

                    </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#FF6802"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/txtconfirmpassword"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:hint="Ulangi Password Anda"
                            />

                    </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#FF6802"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp">

                        <EditText
                            android:id="@+id/nomortelepon"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp"
                            android:background="@android:color/transparent"
                            android:inputType="number"
                            android:hint="Nomor Anda"
                            />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        <!--Login Panel-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            >

            <CheckBox
                android:id="@+id/cbkebijakanpriva"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lilgroteskregular"
                android:textSize="12dp"
                android:text="Saya menyetujui \n menjadi member"/>

            <TextView
                android:id="@+id/tvKebijakanPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lilgroteskregular"
                android:textSize="12dp"
                android:textColor="@color/colorOrange"
                android:text="kebijakan dan syarat \n Kreditimpian.id"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lilgroteskregular"
                android:textSize="12dp"
                android:text="ketentuan"/>
             Kreditimpian.id

        </LinearLayout>


            <!--Button-->
            <Button
                android:id="@+id/btnbuatakun"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="BUAT AKUN"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/lilgroteskbold"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btnorangev2"
                ></Button>


            <!--Register Tex-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                >
                
                <TextView
                    android:id="@+id/btnLogin"
                    android:text="Sudah memiliki akun ? Silahkan Login"
                    android:fontFamily="@font/lilgroteskregular"
                    android:textSize="17dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</LinearLayout>