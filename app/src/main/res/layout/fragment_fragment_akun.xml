<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Akun.FragmentAkun">


    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />



                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="?attr/colorPrimary"
                            app:popupTheme="@style/ThemeOverlay.AppCompat"
                            tools:ignore="MissingConstraints">

<!--                            <ImageView-->
<!--                                android:id="@+id/logo"-->
<!--                                android:paddingTop="15dp"-->
<!--                                android:layout_width="320dp"-->
<!--                                android:paddingBottom="10dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:foregroundGravity="center"-->
<!--                                android:paddingLeft="40dp"-->
<!--                                android:src="@drawable/logoputihkredit"/>-->


                        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linera2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="5dp"
            android:elevation="@dimen/padding_10"
            android:background = "#00ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:focusable="true"
                    android:foregroundGravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_user"
                    app:civ_border_color="#FFFFFFFF"
                    app:civ_border_width="3dp"
                    app:civ_fill_color="#efeeee" />


                <LinearLayout
                    android:gravity="center"
                    android:layout_toRightOf="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txthai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/image"
                    android:fontFamily="@font/cosimabold"
                    android:gravity="center"
                    android:text="Hi, "
                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:textColor="@color/colorOrange"
                    android:textSize="17sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_nama_akun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/cosimabold"
                    android:gravity="center"
                    android:text="Nama"
                    android:layout_toRightOf="@+id/txthai"
                    android:textAppearance="@android:style/TextAppearance.WindowTitle"
                    android:textColor="@color/colorOrange"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btndetailakun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="7dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/card1"
            android:background = "#00ffffff">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/akun"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/akunhitam" />

                <TextView
                    android:id="@+id/text24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/akun"
                    android:gravity="center"
                    android:text="Data Member"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnstatuspesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_below="@+id/btndetailakun"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/statuspesanan"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/statuspesananhitam" />

                <TextView
                    android:id="@+id/txtStatuspesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/statuspesanan"
                    android:gravity="center"
                    android:text="Status Pesanan"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnhistorypesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/btnstatuspesanan"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/historypesanan"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/historypesanan" />

                <TextView
                    android:id="@+id/bexthistorypesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/historypesanan"
                    android:gravity="center"
                    android:text="History Pesanan"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnfavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/btnhistorypesanan"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/favoriteblack" />

                <TextView
                    android:id="@+id/textfavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/favorite"
                    android:gravity="center"
                    android:text="Fovorite"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnnotifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_below="@+id/btnfavorite"
                android:background = "@drawable/cardvieworange">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/notifikasi"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_margin="10dp"
                        android:src="@drawable/notofikasiblack" />

                    <TextView
                        android:id="@+id/textnotifikasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/notifikasi"
                        android:gravity="center"
                        android:text="Notifikasi"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="26sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="5dp"
                android:layout_below="@+id/btnnotifikasi"
                android:background = "@drawable/cardvieworange">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/chat"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_margin="10dp"
                        android:src="@drawable/chat" />

                    <TextView
                        android:id="@+id/textchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/chat"
                        android:gravity="center"
                        android:text="Chat"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/jipatharegular"
                        android:textSize="26sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnkonfirmasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/btnfavorite"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/konfirmasi"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/konfirmasipembayaran" />

                <TextView
                    android:id="@+id/textkonfirmasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/konfirmasi"
                    android:gravity="center"
                    android:text="Konfirmasi Pembayaran"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btngantipassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/btnkonfirmasi"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/gantipassword"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/passwordhitam" />

                <TextView
                    android:id="@+id/textubahpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/gantipassword"
                    android:gravity="center"
                    android:text="Ganti Password"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/btnlogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/btngantipassword"
            android:background = "@drawable/cardvieworange">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/logout"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_margin="10dp"
                    android:src="@drawable/logout" />

                <TextView
                    android:id="@+id/textlogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/logout"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#000"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>


</FrameLayout>