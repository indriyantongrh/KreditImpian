<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akun.DetailAlamat">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            tools:ignore="MissingConstraints">


            <ImageButton
                android:id="@+id/btnback"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/btnback"
                android:background="@android:color/transparent"
                android:src="@drawable/backwhite"/>

            <ImageView
                android:id="@+id/logotop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_toRightOf="@id/btnback"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:src="@drawable/logoputihkredit"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linera2"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textSize="35dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone"
                    android:textColor="#000"
                    android:fontFamily="@font/jipatharegular"
                    android:text="Alamat Pengiriman"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">
                    <EditText
                        android:id="@+id/txtnamaalamat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/jipatharegular"
                        android:hint="Alamat Rumah, Kantor, Apartemen, Dropship"
                        android:inputType="text"
                        android:textSize="26dp" />


                </LinearLayout>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">

                    <EditText
                        android:id="@+id/txtnamapenerima"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/jipatharegular"
                        android:hint="Nama Penerima"
                        android:inputType="text"
                        android:textSize="26dp" />

                </LinearLayout>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">

                    <EditText
                        android:id="@+id/txtnomorhandphone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Nomor Handphone"
                        android:fontFamily="@font/jipatharegular"
                        android:inputType="number"
                        android:textSize="26dp" />

                </LinearLayout>



                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">

                    <Spinner
                        android:id="@+id/spinnerkota_pengiriman"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/jipatharegular"
                        android:entries="@array/kota"></Spinner>


                </LinearLayout>

                <TextView
                    android:id="@+id/text_kota"
                    android:paddingTop="@dimen/padding_10"
                    android:text="Nama kota"
                    android:textColor="@color/colorOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nama_kota"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">

                    <Spinner
                        android:id="@+id/spinnerkecamatan_pengiriman"
                        android:entries="@array/kecamatan"
                        android:layout_width="match_parent"
                        android:fontFamily="@font/jipatharegular"
                        android:layout_height="match_parent"></Spinner>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_id"
                    android:paddingTop="@dimen/padding_10"
                    android:text="Nama kota"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_kecamatan"
                    android:paddingTop="@dimen/padding_10"
                    android:text="Nama kota"
                    android:textColor="@color/colorOrange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/nama_kecamatan"
                        android:textSize="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="37dp">

                    <EditText
                        android:id="@+id/txtkodepospengiriman"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Kode Post"
                        android:fontFamily="@font/jipatharegular"
                        android:inputType="number"
                        android:textSize="26dp" />

                </LinearLayout>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:background="@drawable/borderhitam"
                    android:layout_height="120dp">

                    <EditText
                        android:id="@+id/txtalamatpengririman"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:hint="Alamat Anda"
                        android:gravity="top"
                        android:lines="9"
                        android:fontFamily="@font/jipatharegular"
                        android:inputType="textMultiLine"
                        android:textSize="26dp" />

                </LinearLayout>


                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Jadikan alamat Utama "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Switch
                        android:id="@+id/SwitchAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textOff="NO"
                        android:textOn="YES"
                        android:gravity="right" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textid_geodirectory"
                    android:layout_width="wrap_content"
                    android:text="id geodirectory"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_mainaddress"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textid_distric"
                    android:layout_width="wrap_content"
                    android:text="id geodirectory"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>


                <!--Button-->
                <Button
                    android:id="@+id/btnupdate"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="Update ALamat"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:fontFamily="@font/jipatharegular"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btnorange"
                    ></Button>

                <!--Border-->
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"></LinearLayout>

                <!--Button-->
                <Button
                    android:id="@+id/btndelete"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="Hapus Alamat"
                    android:textStyle="bold"
                    android:textColor="@color/colorOrange"
                    android:textSize="25sp"
                    android:fontFamily="@font/jipatharegular"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/cartwhite"
                    ></Button>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>