<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Akun.DetailAkun">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />



    <LinearLayout
        android:id="@+id/linera1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        tools:ignore="MissingConstraints">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/back"
                android:background="@color/colorOrange"
                android:src="@drawable/tombolkembali"/>

            <ImageView
                android:id="@+id/logotop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_toRightOf="@id/back"
                android:paddingRight="50dp"
                android:src="@drawable/logoputihkredit"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/linera2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Detail Akun"
                    android:gravity="center"
                    android:textColor="#000"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:textSize="30dp"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btndatapribadi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="7dp"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/card1"
                    android:background = "#00ffffff">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/akun"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="10dp"
                            android:src="@drawable/akunhitam" />

                        <TextView
                            android:id="@+id/text24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/akun"
                            android:gravity="center"
                            android:paddingTop="9dp"
                            android:text="Data Diri"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnalamatpengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/btndatapribadi"
                    android:background = "@drawable/cardvieworange">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/statuspesanan"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="10dp"
                            android:src="@drawable/delivery" />

                        <TextView
                            android:id="@+id/txtstatuspesanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/statuspesanan"
                            android:gravity="center"
                            android:paddingTop="9dp"
                            android:text="Alamat Pengiriman"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/btnalamatkantor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/btnalamatpengiriman"
                    android:background = "@drawable/cardvieworange">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/historypesanan"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="10dp"
                            android:src="@drawable/kantor" />

                        <TextView
                            android:id="@+id/bexthistorypesanan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/historypesanan"
                            android:gravity="center"
                            android:paddingTop="9dp"
                            android:text="Alamat Kantor"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btndatasaudara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/btnalamatkantor"
                    android:background = "@drawable/cardvieworange">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/favorite"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="10dp"
                            android:src="@drawable/datasaudara" />

                        <TextView
                            android:id="@+id/textfavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/favorite"
                            android:gravity="center"
                            android:paddingTop="9dp"
                            android:text="Data Saudara Tak Serumah"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnuploaddokumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="6dp"
                    android:layout_margin="5dp"
                    android:layout_below="@+id/btndatasaudara"
                    android:background = "@drawable/cardvieworange">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="50dp">

                        <ImageView
                            android:id="@+id/konfirmasi"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_margin="10dp"
                            android:src="@drawable/dokumen" />

                        <TextView
                            android:id="@+id/textkonfirmasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/konfirmasi"
                            android:gravity="center"
                            android:paddingTop="9dp"
                            android:text="Upload Dokumen Pendukung"
                            android:textColor="#000"
                            android:textSize="20sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>



            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>