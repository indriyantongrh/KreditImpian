<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransactionProcess.TransactionSelectMitra">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="90dp"
            tools:ignore="MissingConstraints">



            <!--Product-->
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/btnclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/borderorange"
                android:backgroundTint="#fff"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                tools:ignore="MissingConstraints">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderorange"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">


                    <LinearLayout
                        android:id="@+id/LinearImage"
                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_below="@+id/linearstatus"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scaleType="centerCrop"
                            android:src="@drawable/no_image" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_name_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearstatus"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/LinearImage"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Nama Product"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#636363"
                        android:textSize="16dp"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/txt_price_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_name_product"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/LinearImage"
                        android:background="@drawable/strikethrough"
                        android:fontFamily="@font/cosimabold"
                        android:text="Harga Asli"
                        android:textColor="#9C9C9C"
                        android:textSize="12dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_price_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_price_capital"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/LinearImage"
                        android:text="Harga Diskon"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_id_transaction"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_origin"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_weight"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_destination"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_reference_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_id_product_category"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_number"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Pilih mitra (maksimal pilih 3)"
                android:textSize="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/borderhitam"
                android:orientation="vertical">

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Adira" />-->

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="BCA Finance" />-->

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="BAF" />-->
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:id="@+id/swipeRefresh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMitra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_marginEnd="@dimen/padding_10"
                        android:layout_marginBottom="@dimen/padding_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Pilih Jasa Pengiriman"
                android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:background="@drawable/borderhitam"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/spinnercourier"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26dp"></Spinner>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/progress_loader"
                style="?android:attr/progressBarStyle"
                android:layout_toRightOf="@id/spinnercourier"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:visibility="visible" />
        </LinearLayout>

                <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
                    android:id="@+id/spinCostOngkir"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen3dp"
                    android:layout_marginEnd="@dimen/dimen3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:smsp_floatingLabelText=""
                    app:smsp_hint="Pilih Jasa Pengiriman"
                    app:smsp_hintColor="@color/colorOrange"
                    app:smsp_itemColor="@color/colorOrange"
                    app:smsp_itemListColor="@color/colorOrange"
                    app:smsp_itemListHintBackgroundColor="@color/colorOrange"
                    app:smsp_itemListHintColor="@android:color/white"
                    app:smsp_multilineError="false"
                    app:smsp_selectedItemListColor="#FF5252"
                    app:smsp_underlineColor="@color/colorOrange" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:text="Catatan "
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/borderhitam"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txt_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/jipatharegular"
                    android:gravity="top"
                    android:hint="Catatan"
                    android:inputType="textMultiLine"
                    android:lines="9"
                    android:textSize="26dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Estimasi Biaya Pengiriman "
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_estimasipengiriman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="right"
                    android:paddingTop="10dp"
                    android:text="Rp. "
                    android:textSize="16dp" />

            </LinearLayout>


            <!--Button-->
            <Button
                android:id="@+id/btnSelanjutnya"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btnorange"
                android:fontFamily="@font/jipatharegular"
                android:text="Selanjutnya"
                android:textColor="#fff"
                android:textSize="25sp"
                android:textStyle="bold"></Button>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>