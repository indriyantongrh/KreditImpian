<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryPesanan.TabProductRequest.TransactionSelectMitraFitur">

    <androidx.core.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints">


            <!--Product-->
            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/btnclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="5dp"
                android:background="@drawable/borderorange"
                android:backgroundTint="#fff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                tools:ignore="MissingConstraints">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderorange"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    >



                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/LinearImage"
                        android:layout_width="150dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/linearstatus"
                        android:layout_height="130dp">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/no_image"
                            android:scaleType="centerCrop" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_name_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Product"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#636363"
                        android:textSize="16dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_below="@+id/linearstatus"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/LinearImage"
                        tools:ignore="NotSibling" />

                    <TextView
                        android:id="@+id/txt_price_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Asli"
                        android:textSize="12dp"
                        android:visibility="visible"
                        android:background="@drawable/strikethrough"
                        android:layout_below="@id/txt_name_product"
                        android:layout_marginStart="8dp"
                        android:textColor="#9C9C9C"
                        android:layout_toRightOf="@+id/LinearImage"
                        android:fontFamily="@font/cosimabold"/>

                    <TextView
                        android:id="@+id/txt_price_sale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga Diskon"
                        android:textStyle="bold"
                        android:layout_below="@+id/txt_price_capital"
                        android:layout_marginStart="8dp"
                        android:layout_toRightOf="@+id/LinearImage"
                        />


                    <TextView
                        android:id="@+id/txt_harga_barang"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_id_transaction"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_origin"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_weight"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_destination"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_reference_id"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_id_product_category"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_number"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />


                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:text="Pilih mitra (maksimal pilih 3)"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/borderhitam"
                android:orientation="vertical">

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="Adira" />-->

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="BCA Finance" />-->

                <!--            <CheckBox-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:text="BAF" />-->
                <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:id="@+id/swipeRefresh"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMitra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_marginBottom="@dimen/padding_10"
                        android:layout_marginStart="@dimen/padding_10"
                        android:layout_marginEnd="@dimen/padding_10"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

            </LinearLayout>

            <TextView
                android:text="Pilih Jasa Pengiriman"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="37dp">

                <Spinner
                    android:id="@+id/spinnercourier"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26dp"
                    android:layout_height="match_parent"></Spinner>
            </LinearLayout>

            <TextView
                android:text="Catatan "
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/borderhitam"
                android:layout_height="120dp">

                <EditText
                    android:id="@+id/txt_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:hint="Catatan"
                    android:gravity="top"
                    android:lines="9"
                    android:inputType="textMultiLine"
                    android:fontFamily="@font/jipatharegular"
                    android:textSize="26dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Estimasi Biaya Pengiriman "
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_estimasipengiriman"
                    android:text="Rp. "
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:paddingTop="10dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <!--Button-->
            <Button
                android:id="@+id/btnSelanjutnya"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:text="Selanjutnya"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="25sp"
                android:fontFamily="@font/jipatharegular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btnorange"
                ></Button>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>