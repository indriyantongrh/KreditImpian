<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    android:backgroundTint="#fff"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_gravity="center">



        <LinearLayout
            android:id="@+id/LinearImage"
            android:layout_width="150dp"
            android:layout_below="@+id/linearstatus"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_image" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Product"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#636363"
            android:textSize="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/linearstatus"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/LinearImage"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txt_price_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Asli"
            android:textSize="12dp"
            android:visibility="visible"
            android:background="@drawable/strikethrough"
            android:layout_below="@id/txt_name_product"
            android:layout_marginStart="8dp"
            android:textColor="#9C9C9C"
            android:layout_toRightOf="@+id/LinearImage"
            android:fontFamily="@font/cosimabold"/>

        <TextView
            android:id="@+id/txt_price_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Diskon"
            android:textStyle="bold"
            android:layout_below="@+id/txt_price_capital"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/LinearImage"
            />



        <TextView
            android:id="@+id/txt_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_reference_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_id_product_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />



    </RelativeLayout>
    <ImageView
        android:id="@+id/btnDelete"
        android:src="@drawable/trash"
        android:layout_gravity="right|bottom"
        android:layout_width="30dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="30dp"/>

</androidx.cardview.widget.CardView>