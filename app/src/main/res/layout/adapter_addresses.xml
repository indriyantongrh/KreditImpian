<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnclick"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp"
    android:backgroundTint="#fff"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txt_name_penerima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearstatus"
            android:layout_toRightOf="@+id/LinearImage"
            android:ellipsize="end"
            android:layout_marginStart="9dp"
            android:maxLines="2"
            android:text="Nama Penerima"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBlack"
            android:textSize="15dp"
            android:paddingBottom="3dp"
            android:fontFamily="@font/sairaregular"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txt_nama_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama alamat"
            android:textStyle="italic|bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorOrange"
            android:textSize="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/txt_name_penerima"
            android:layout_marginStart="8dp"
            tools:ignore="NotSibling" />





        <TextView
            android:id="@+id/txt_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#636363"
            android:textSize="14dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/txt_nama_alamat"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/LinearImage"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txt_kodepost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode Post"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#636363"
            android:textSize="14dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_below="@+id/txt_alamat"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/LinearImage"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txt_nomor_handphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"
            android:textSize="14dp"
            android:layout_below="@+id/txt_kodepost"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/LinearImage"
            />

        <RelativeLayout
            android:layout_below="@+id/txt_kodepost"
            android:id="@+id/relativeLayout"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_alamat_utama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Utama"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorwhite"
                android:textSize="11dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/LinearImage"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/txt_alamat_utama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="null"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorwhite"
                android:textSize="11dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textStyle="bold"
                android:paddingRight="10dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/text_alamat_utama"
                tools:ignore="NotSibling" />





        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_below="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Jadikan alamat Utama "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Switch
                android:id="@+id/SwitchAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"

                android:textOff="NO"
                android:textOn="YES"
                android:gravity="right" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_member"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_main_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_geodirectory"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/district"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </RelativeLayout>




</androidx.cardview.widget.CardView>