                    android:id="@+id/text_kecamatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_10"
                    android:text="Nama Kecamatan"

                    android:textColor="@color/colorOrange" />

                    <LinearLayout
                        android:id="@+id/LinearKecamatan"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="37dp">

                        <Spinner
                            android:id="@+id/spinnerkecamatn_saudara"
                            android:entries="@array/kecamatan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></Spinner>
                    </LinearLayout>

                <Button
                    android:id="@+id/btnUbahKecamatan"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/btnorange"
                    android:text="Ubah Kecamatan"
                    android:textColor="@color/colorwhite"
                    />

                <LinearLayout
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">


                    <TextView
                        android:id="@+id/kecamatanSelected"
                        android:text="Kecamatan Yang anda Pilih"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="37dp">

                        <EditText
                            android:id="@+id/txtkodepos_saudara"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:hint="Kode Pos"
                            android:inputType="number"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp" />

                    </LinearLayout>

                    <!--Border-->
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="@drawable/borderhitam"
                        android:layout_height="120dp">

                        <EditText
                            android:id="@+id/txtalamat_saudara"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@android:color/transparent"
                            android:hint="Alamat"
                            android:gravity="top"
                            android:lines="9"
                            android:inputType="textMultiLine"
                            android:fontFamily="@font/jipatharegular"
                            android:textSize="26dp" />

                    </LinearLayout>


                <TextView
                    android:id="@+id/id_kota"
                    android:text="id_kota"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/id_kecamatan"
                    android:text="id_kecamatan"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                    <!--Border-->
                    <LinearLayout
                        android:background="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"></LinearLayout>






                <!--Button-->
                <Button
                    android:id="@+id/btnsimpan"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:text="SIMPAN DATA"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="25sp"
                    android:fontFamily="@font/jipatharegular"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btnorange"
                    ></Button>



            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>