<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".DetailProduct">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/imageproducr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#fff"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image" />


                <TextView
                    android:id="@+id/txt_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:ellipsize="end"
                    android:fontFamily="@font/jipitha"
                    android:maxLines="3"
                    android:text="Nama Product"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#636363"
                    android:textSize="28sp"
                    android:layout_marginStart="3dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_price_capital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name_product"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/jipitha"
                    android:text="Harga Asli"
                    android:textColor="#9C9C9C"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/txt_price_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_price_capital"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/jipitha"
                    android:text="Harga Diskon"
                    android:textColor="@color/colorOrange"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_id"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_id_product_category"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_id_currency"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeinformationproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#fff"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@+id/text_informastion_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/jipitha"
                    android:text="Informasi Produk"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_informastion_product"
                    android:text="Berat"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_berat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_informastion_product"
                    android:layout_toEndOf="@+id/text_berat"
                    android:layout_toRightOf="@+id/text_berat"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:text="null"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/text_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_berat"
                    android:text="Kondisi"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_condition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_berat"
                    android:layout_toEndOf="@+id/text_condition"
                    android:layout_toRightOf="@+id/text_condition"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:text="null"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_condition"
                    android:text="Stok Barang"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txt_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_condition"
                    android:layout_toEndOf="@+id/text_stock"
                    android:layout_toRightOf="@+id/text_stock"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:gravity="right"
                    android:text="null"
                    android:fontFamily="@font/sairaregular"
                    android:textColor="#636363"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_below="@+id/text_stock"
                    android:fontFamily="@font/jipitha"
                    android:text="Deskripsi Produk"
                    android:textSize="28sp"
                    android:textColor="#636363"
                    android:textStyle="bold" />

                <WebView
                    android:id="@+id/txt_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_description"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/jipitha"
                    android:text="Isi Deskripsi Produk"
                    android:textSize="26sp"
                    tools:ignore="WebViewLayout" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
             >

            <Button
                android:id="@+id/btnLogin"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Beli Sekarang"
                android:textStyle="bold"
                android:textColor="#fff"
                android:fontFamily="@font/jipatharegular"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/btnorange"
                ></Button>


        </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>