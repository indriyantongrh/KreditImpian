<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttonsheet"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/text_masakan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_beranda"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Pilih Kategori"
        android:layout_gravity="center"
        android:textColor="@color/colorOrange"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/jipatharegular"
        android:layout_marginStart="10dp" />


        <!--Baris pertama-->
        <RelativeLayout
            android:id="@+id/baris1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <!--Card Fashion-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_handphone"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="0dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView42"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/handphone" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Handphone"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:layout_alignStart="@id/btn_handphone"
                android:layout_alignEnd="@+id/btn_handphone"
                android:fontFamily="@font/jipatharegular"
                android:textSize="15sp" />


            <!--Card laptop-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_laptop"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/btn_handphone"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView52"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/laptop" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Komputer"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:layout_alignStart="@id/btn_laptop"
                android:layout_alignEnd="@+id/btn_laptop"
                android:fontFamily="@font/jipatharegular"
                android:textSize="15sp" />


            <!--Card laptop-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_otomotif"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/btn_laptop"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imgotomotif"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/otomotif" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Otomotif"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:layout_alignStart="@id/btn_otomotif"
                android:layout_alignEnd="@+id/btn_otomotif"
                android:fontFamily="@font/jipatharegular"
                android:textSize="15sp" />




            <androidx.cardview.widget.CardView
                android:id="@+id/btn_forniture"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/btn_otomotif"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView62"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/forniture" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:text="Forniture"
                android:textStyle="bold"
                android:textColor="@color/colorOrange"
                android:layout_alignStart="@id/btn_forniture"
                android:layout_alignEnd="@+id/btn_forniture"
                android:fontFamily="@font/jipatharegular"
                android:textSize="15sp" />


